@page
@model ProductsModel
@{
  ViewData["Title"] = "Products";
}

<h1>Products</h1>
<div class="container-fluid">
  <div class="row">
  @foreach (var product in ProductsModel.SampleData)
  {
    <div class="card col-sm-12 col-md-4 col-lg-3 m-1">
      <img class="card-img-top" src="@product.ImageUrl" alt="placeholder">
      <div class="card-body">
        <h4>@product.Title</h4>
        <p>$@product.Price</p>
        <a href="#" class="btn btn-outline-primary">Purchase</a>
      </div>
    </div>
  }
  </div>
</div>