@inherits LayoutComponentBase

<MudThemeProvider />
<MudSnackbarProvider />
<MudDialogProvider
				   Position="DialogPosition.TopCenter"/>

<MudLayout>
	<MudAppBar Elevation="3">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Style="@($"color:{Colors.Green.Accent2};")" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
		@*<MudText Typo="Typo.h5" Class="ml-3">Dashboard</MudText>*@
		<MudSpacer />
	</MudAppBar>
	<MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Color="Color.Dark">
        <NavMenu />
    </MudDrawer>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.Medium">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    
}
